<Window x:Class="WpfApp1.ManageVehicleWindow_AddNewItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ManageVehicleWindow_AddNewItem" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10 0" VerticalAlignment="Center">
            <Label Name="Label_Header" Content="Add new item" FontSize="24" FontWeight="Bold" HorizontalContentAlignment="Center"></Label>
            
            <Label Name="Label_Name" Content="Name" FontSize="18" HorizontalAlignment="Center"/>
            <TextBox Name="Txtbox_Name" Padding="5" Width="200" HorizontalAlignment="Center"></TextBox>
            <Label Name="Label_Price" Content="Price" FontSize="18" HorizontalAlignment="Center"/>
            <TextBox Name="Txtbox_Price" Padding="5" Width="200" HorizontalAlignment="Center"></TextBox>
            <Button Content="Submit" Width="200" Margin="0 10" Padding="5" Click="SubmitItemButton_Click"></Button>
            <Button Content="Back" Width="200" Padding="5" Click="BackButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
